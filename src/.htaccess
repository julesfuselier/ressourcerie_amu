# ============================
# COMPRESSION GZIP/BROTLI
# ============================
<IfModule mod_deflate.c>
    # Compression pour tous les types de fichiers texte
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE font/truetype
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
</IfModule>

# Support Brotli si disponible (meilleur que gzip)
<IfModule mod_brotli.c>
    BrotliCompressionQuality 6
    BrotliFilterNote Input instream
    BrotliFilterNote Output outstream
    BrotliFilterNote Ratio ratio
    LogFormat '"%r" %{outstream}n/%{instream}n (%{ratio}n%%)' brotli
    AddOutputFilterByType BROTLI_COMPRESS text/plain
    AddOutputFilterByType BROTLI_COMPRESS text/html
    AddOutputFilterByType BROTLI_COMPRESS text/css
    AddOutputFilterByType BROTLI_COMPRESS application/javascript
    AddOutputFilterByType BROTLI_COMPRESS application/json
</IfModule>

# ============================
# CACHE HEADERS OPTIMISÉS
# ============================

# Images - Cache 1 an (immutable car ne changent pas souvent)
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|avif)$">
    Header set Cache-Control "max-age=31536000, public, immutable"
    Header unset ETag
    FileETag None
</FilesMatch>

# CSS/JS - Cache 1 mois avec validation
<FilesMatch "\.(css|js)$">
    Header set Cache-Control "max-age=2628000, public"
    Header set ETag "W/"\"$(stat -c %Y-%s "\"$1"\")"\""
</FilesMatch>

# Polices - Cache 1 an
<FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
    Header set Cache-Control "max-age=31536000, public, immutable"
    Header unset ETag
    FileETag None
</FilesMatch>

# HTML - Cache court avec validation
<FilesMatch "\.html$">
    Header set Cache-Control "max-age=3600, public, must-revalidate"
    Header set ETag "W/"\"$(stat -c %Y-%s "\"$1"\")"\""
</FilesMatch>

# Manifests et configs - Cache court
<FilesMatch "\.(json|xml|txt)$">
    Header set Cache-Control "max-age=86400, public"
</FilesMatch>

# ============================
# OPTIMISATIONS SÉCURITÉ & PERF
# ============================

# Désactive les ETags pour les fichiers statiques (évite la bande passante)
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|ico|woff|woff2)$">
    Header unset ETag
    FileETag None
</FilesMatch>

# Headers de sécurité légers
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"

# Préconnexion DNS pour les polices Google
<FilesMatch "\.html$">
    Header add Link "</style.css>; rel=preload; as=style"
    Header add Link "<https://fonts.googleapis.com>; rel=preconnect"
    Header add Link "<https://fonts.gstatic.com>; rel=preconnect; crossorigin"
</FilesMatch>

# ============================
# EXPIRES HEADERS (backup si Cache-Control fail)
# ============================
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>